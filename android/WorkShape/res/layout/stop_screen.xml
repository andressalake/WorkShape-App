<?xml version="1.0" encoding="utf-8"?>
 <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_horizontal_margin" >

   <ImageView
        android:id="@+id/imageViewlogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:src="@drawable/people" />
   
      <ImageView
         android:id="@+id/imageViewInfoIcon"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginBottom="200dp"
         android:src="@drawable/info_icon_white" />

   <ImageView
       android:id="@+id/imageViewStopRed"
       android:layout_width="256dp"
       android:layout_height="205dp"
       android:layout_gravity="center_horizontal"
       android:layout_marginTop="50dp"
       android:src="@drawable/stop_sign" />

   <TextView
       android:id="@+id/textViewStop_stopScreen"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:layout_marginTop="90dp"
       android:textSize="55dp"
       android:text="STOP!"
       android:textColor ="@color/white"
       />
   
      <TextView
       android:id="@+id/textViewnotConnectstopScreen"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:layout_marginTop="160dp"
       android:textSize="12dp"
        android:text="It looks like you aren't connected \n\t\t\tto a team yet!"
       android:textColor ="@color/white"
       />
      
        <TextView
       android:id="@+id/textViewnotConnectstopScreen"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:layout_marginTop="320dp"
       android:textSize="12dp"
        android:text="-or-"
       android:textColor ="@color/blue"
       />
        
            <TextView
       android:id="@+id/textViewnotaskTeamAdmin_stopScreen"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:layout_marginTop="360dp"
       android:textSize="12dp"
        android:text="\t\t\tAsk your Team Administrador \nto add your email address to the Team List "
       android:textColor ="@color/blue"
       />
            
 

       <Button
           android:id="@+id/buttoncreateTeam"
           android:layout_width="199dp"
           android:layout_height="37dp"
           android:layout_gravity="center_horizontal"
           android:background="@drawable/green_button_shadow"
           android:text="Create My Team!"
           android:layout_marginTop="270dp"
           android:textColor="@color/white" />

  </FrameLayout>

