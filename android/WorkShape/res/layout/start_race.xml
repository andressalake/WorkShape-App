<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/startRaceLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:layout_gravity="center_horizontal"
        android:textColor = "@color/white"
        android:text="."
        android:textSize="70sp" />

    <TextView
        android:id="@+id/textViewNextRace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor = "@color/white"
        android:textSize="25sp"
        android:layout_marginTop="65dp"
        android:layout_gravity="center_horizontal"
        android:text="NEXT RACE" />

    <Button
        android:id="@+id/buttonJoinRace"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="195dp"
        android:textColor="@color/white"
        android:background="@drawable/button_background"
        android:onClick="newRace"
        android:text="Join this race!" />

    <ImageView
        android:id="@+id/imageViewlogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:src="@drawable/people" />
    
     <ImageView
        android:id="@+id/imageViewwaves_startScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@drawable/waves" />
    
    <ImageView
         android:id="@+id/imageViewInfoIcon"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginBottom="200dp"
         android:src="@drawable/info_icon_white" />
    
     <ImageView
         android:id="@+id/imageViewCompanyIconPlaceholderTeam"
         android:layout_width="35dp"
         android:layout_height="wrap_content"
         android:layout_marginLeft="180dp"
         android:layout_marginTop="340dp"
         android:clickable="true"
         android:onClick="showTeamInfo"
         android:src="@drawable/company_icon_placeholder" />
     
     <ImageView
         android:id="@+id/imageViewCompanyIconPlaceholderCharity"
         android:layout_width="35dp"
         android:layout_height="wrap_content"
         android:layout_marginLeft="180dp"
         android:layout_marginTop="390dp"
         android:clickable="true"
         android:onClick="showTeamInfo"
         android:src="@drawable/company_icon_placeholder" />
     
      <ImageView
          android:id="@+id/imageViewdarkIfonIconTeam"
          android:layout_width="35dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="35dp"
          android:layout_marginTop="340dp"
          android:src="@drawable/dark_info_icon" />

      <ImageView
         android:id="@+id/imageViewdarkIfonIconCharity"
           android:layout_width="35dp"
          android:layout_height="wrap_content"
         android:layout_marginLeft="35dp"
         android:layout_marginTop="390dp"
         android:src="@drawable/dark_info_icon" />

    <TextView
        android:id="@+id/textViewTips"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="265dp"
        android:background="@drawable/blue_background"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textViewTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team:"
        android:layout_marginLeft="80dp"
          android:layout_marginTop="350dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/textViewCharity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Charity:"
        android:layout_marginLeft="80dp"
          android:layout_marginTop="400dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
      <TextView
        android:id="@+id/textViewTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Inc."
        android:layout_marginLeft="220dp"
          android:layout_marginTop="350dp"
          android:textColor="@color/blue"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/textViewCharityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Charity1"
        android:layout_marginLeft="220dp"
          android:layout_marginTop="400dp"
          android:textColor="@color/blue"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
        <TextView
        android:id="@+id/textViewEqualSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:textSize="60sp"
        android:text="="
        android:textColor="@color/white" />

    <FrameLayout
        android:id="@+id/teamInfoLayout"
        android:layout_width="291dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="160dp"
        android:background="@color/white" >
        
         <TextView
        android:id="@+id/textViewMyTeams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="80dp"
        android:textSize="20sp"
        android:text="My Teams:"
          />
         
         <TextView
        android:id="@+id/textViewsecondsStretch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="40dp"
        android:textSize="50sp"
        android:text="34"
          />
         
           <TextView
        android:id="@+id/textViewClickOnTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textSize="13sp"
        android:text="(Click on a team name to race for that team)"
        />
        
        
    </FrameLayout>

</FrameLayout>
